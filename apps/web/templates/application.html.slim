doctype html
html
  head
    title
      | #{title} - RubyJobs

    = favicon
    = stylesheet 'bootstrap', 'main'
    = render partial: 'shared/meta_tags'

  body.h-100
    main
      .container
        - if flash[:success]
          .alert.alert-success
            = flash[:success]
        = yield

    = render partial: 'shared/footer'

    = javascript 'jquery', 'bootstrap', 'main'
